@model QuizStep.Models.QuizModels.QuizTestModel

<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
    <div class="card card-inverse card-info">
        <img class="card-img-top" src="@Model.Icon" alt="@Model.Name тест зображення">
        <div class="card-block">
            <h4 class="card-title">@Model.Name</h4>
            <div class="card-text">
                Створено: @Model.MentorName
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-info btn-sm" asp-action="DisplayTest" asp-controller="Quiz" asp-route-id="@Model.Id">Розпочати</a>
        </div>
    </div>
</div>