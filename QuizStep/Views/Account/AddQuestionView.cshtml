@model QuizStep.Models.UserModels.ProfileTestsModel
@{
    ViewData["Title"] = "Profile";
}

<section id="about-us" class="py-5">
    <div class="container">
        <div class="row">
            <!--left sidebar-->
            <div class="col-md-3 pr-md-4">
                <div class="sidebar-left">
                    <!--sidebar menu-->
                    <ul class="list-unstyled sidebar-menu pl-md-2 pr-md-0">
                        <li>
                            <a class="sidebar-item d-flex justify-content-between align-items-center" asp-action="Profile" asp-controller="Account" asp-route-id="@Model.Login">
                                Профіль
                                <span class="fas fa-user"></span>
                            </a>
                        </li>
                        @if (@Model.Role == "Mentor")
                        {
                            <li>
                                <a class="sidebar-item d-flex justify-content-between align-items-center" asp-action="ProfileTestsEdit" asp-controller="Account" asp-route-id="@Model.Login">
                                    Редагування тестів
                                    <span class="fas fa-copy"></span>
                                </a>
                            </li>
                        }
                        @if (@Model.Role == "Student")
                        {
                            <li>
                                <a class="sidebar-item d-flex justify-content-between align-items-center" asp-action="ProfileTests" asp-controller="Account" asp-route-id="@Model.Login">
                                    Тести
                                    <span class="fas fa-copy"></span>
                                </a>
                            </li>
                        }
                        <li>
                            <a class="sidebar-item d-flex justify-content-between align-items-center" asp-action="ProfileStudents" asp-controller="Account" asp-route-id="@Model.Login">
                                Студенти
                                <span class="fas fa-user"></span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-item d-flex justify-content-between align-items-center">
                                Налаштування
                                <span class="fas fa-cog"></span>
                            </a>
                        </li>
                        <li>
                            <a class="sidebar-item d-flex justify-content-between align-items-center" asp-action="Logout" asp-controller="Account">
                                Вихід
                                <span class="fas fa-sign-out-alt"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!--Content-->
            <div class="col-md-9">
                <div class="dashboard-area">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3 bg-dark">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row card-background">
                                            <div class=" col-md-6 ml-auto mr-auto">
                                                <div class="profiles p-3 my-4 rounded text-center shadow-sm">
                                                    <div class="avatars">
                                                        <a href="#">
                                                            <img src="~/avatars/@Model.Avatar" alt="@Model.Login avatar" class="avatar-lg img-fluid" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Edit avatar images">
                                                        </a>
                                                    </div>
                                                    <div class="names">
                                                        <h3 class="title text-light">@Model.RealName</h3>
                                                        <h4 class="title text-light">Role: @Model.Role</h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (@Model.Role == "Mentor")
            {
                <form asp-action="AddQuestion" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.EditingQuestion.Text" class="control-label" style="font-weight: bolder">Текст питання:</label>
                        <input asp-for="@Model.EditingQuestion.Text" class="form-control" placeholder="Введіть текст питання"/>
                    </div>
                    <label style="font-weight: bolder">Відповіді:</label>
                    <div class="form-group" style="margin-left: 0.7rem">
                        <div class="form-group">
                            <label>Перша відповідь:</label>
                            <div class="input-group">
                                <input asp-for="@Model.EditingQuestion.Answers[0].Text" class="form-control" placeholder="Введіть текст відповіді"/>
                            </div>
                            <div class="input-group mt-2">
                                <input asp-for="@Model.EditingQuestion.Answers[0].IsRight" type="checkbox" style="scale:1.5; margin-left: 0.5rem" class="mr-2"/>
                                <label class="form-check-label" for="@Model.EditingQuestion.Answers[0].IsRight">Правильна відповідь</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 0.7rem">
                        <label>Друга відповідь:</label>
                        <div class="input-group">
                            <input asp-for="@Model.EditingQuestion.Answers[1].Text" class="form-control" placeholder="Введіть текст відповіді"/>
                        </div>
                        <div class="input-group mt-2">
                            <input asp-for="@Model.EditingQuestion.Answers[1].IsRight" type="checkbox" style="scale:1.5; margin-left: 0.5rem" class="mr-2"/>
                            <label class="form-check-label" for="@Model.EditingQuestion.Answers[1].IsRight">Правильна відповідь</label>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 0.7rem">
                        <label>Третя відповідь:</label>
                        <div class="input-group">
                            <input asp-for="@Model.EditingQuestion.Answers[2].Text" class="form-control" placeholder="Введіть текст відповіді"/>
                        </div>
                        <div class="input-group mt-2">
                            <input asp-for="@Model.EditingQuestion.Answers[2].IsRight" type="checkbox" style="scale:1.5; margin-left: 0.5rem" class="mr-2"/>
                            <label class="form-check-label" for="@Model.EditingQuestion.Answers[2].IsRight">Правильна відповідь</label>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 0.7rem">
                        <label>Четверта відповідь:</label>
                        <div class="input-group">
                            <input asp-for="@Model.EditingQuestion.Answers[3].Text" class="form-control" placeholder="Введіть текст відповіді"/>
                        </div>
                        <div class="input-group mt-2">
                            <input asp-for="@Model.EditingQuestion.Answers[3].IsRight" type="checkbox" style="scale:1.5; margin-left: 0.5rem" class="mr-2"/>
                            <label class="form-check-label" for="@Model.EditingQuestion.Answers[3].IsRight">Правильна відповідь</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.EditingQuestion.TestId" value="@Model.EditingTestId"/>
                        <button type="submit" class="btn btn-primary">Додати це питання</button>
                    </div>
                </form>
            }
        </div>
    </div>
</section>

